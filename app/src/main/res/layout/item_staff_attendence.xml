<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_site_lst_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/recycler_item_corner_radius"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/root_layout_message_list_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!--<include layout="@layout/item_text_circle" />-->

        <TextView
            android:id="@+id/site_list_row_site_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_site_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_list_row_site_name"

            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/site_list_row_site_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_site_identifier"

            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:id="@+id/site_list_row_site_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/site_list_row_site_address"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1" />

        <TextView
            android:id="@+id/tv_tag_offline_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/material_text_caption"
            android:visibility="gone" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

