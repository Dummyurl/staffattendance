<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_site_lst_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_recycler_corner_radius"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_row"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <include layout="@layout/item_text_circle" />

        <TextView
            android:id="@+id/staff_list_row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:text="Nishon Tandukar"
            android:textColor="@color/text_black"
            android:textSize="@dimen/material_text_body1" />


        <TextView

            android:id="@+id/staff_list_row_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/staff_list_row_name"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:text="Staff Mananger"
            android:textSize="@dimen/material_text_subhead" />

        <TextView
            android:id="@+id/staff_list_row_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/staff_list_row_type"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/material_text_button"
            android:visibility="gone" />

        <TextView
            android:id="@+id/staff_list_row_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/staff_list_row_email"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textSize="@dimen/material_text_button"
            android:visibility="gone" />

        <TextView
            android:id="@+id/staff_list_row_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:textSize="@dimen/material_text_caption" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

